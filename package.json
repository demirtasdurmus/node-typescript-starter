{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Node Typescript Starter Boilerplate",
  "keywords": [
    "node",
    "typescript",
    "starter",
    "boilerplate"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev:tsc": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
    "dev:node": "node --enable-source-maps --watch dist/index.js",
    "dev": "npm run dev:tsc & npm run dev:node",
    "build": "tsc --pretty -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix .",
    "format:write": "prettier --write \"**/*.ts\" --cache",
    "format:check": "prettier --check \"**/*.ts\" --cache",
    "clean": "bash scripts/clean.sh",
    "commit": "commit",
    "prepare": "husky",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/prompt-cli": "^20.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.3",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-sort-imports": "^1.8.9",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.50.0"
  }
}
